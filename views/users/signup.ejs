<div class="col-sm-6 col-sm-offset-3">

    <h1>Sign Up</h1>

    <% if(message.length){ %>
    <div class="alert alert-danger"><%= message%></div>
    <% } %>

    <form action="/signup" method="post">
        <div class="form-group">
          <div class="col-sm-6">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstname" minlength="3" maxlength="15">
          </div>
          <div class="col-sm-6">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname" minlength="3" maxlength="15">
          </div>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email" minlength="4" maxlength="30">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" minlength="4" maxlength="20">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>

    <hr>

    <!-- <h2>Or Signup With <a href="/auth/facebook" class="btn btn-primary btn-lg">Facebook</a></h2> -->

    <p>Or, <a href="/login">Login</a></p>
    <p>Go back <a href="/">home</a>.</p>

</div>
